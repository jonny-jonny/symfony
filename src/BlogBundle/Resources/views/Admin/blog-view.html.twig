{% extends "BlogBundle::admin-layout.html.twig" %}

{% block page_title %}Блоги{% endblock %}
{% block main %}
    <nav>
        <ul class="menu-item">
            <li class="item"><a href="{{ path("admin_blog_add") }}">Add Blog</a></li>
        </ul>
    </nav>
    <div class="view blog-view-admin">
        <div class="fields-row">
            {% for blog in blogs %}
                <div class="field-row">
                    <div class="field field-title">{{ blog.title }}</div>
                    <div class="field field-blog-edit"><a href="{{ path('admin_blog_edit', { id : blog.id}) }}">Edit</a></div>
                </div>
            {% endfor %}
        </div>
    </div>
    {{ include('BlogBundle:Include:pagination.html.twig', { 'pagination': pagination }) }}
{% endblock %}